@{
    ViewData["Title"] = "Update - FinanceHub";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <!-- Main Content -->
    <main class="container mt-5 pt-5">
        <h1>Update Financial Record</h1>
        <p>This page simulates updating a financial record.</p>

        <form class="mt-4">
            <div class="mb-3">
                <label for="recordId" class="form-label">Record ID</label>
                <input type="text" class="form-control" id="recordId" placeholder="Enter ID to update">
            </div>
            <div class="mb-3">
                <label for="newAmount" class="form-label">New Amount</label>
                <input type="text" class="form-control" id="newAmount" placeholder="Enter new amount">
            </div>
            <button type="submit" class="btn btn-dark">Simulate Update</button>
        </form>
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-white text-center p-3 mt-5">
        <p>&copy; 2025 FinanceHub Team</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
