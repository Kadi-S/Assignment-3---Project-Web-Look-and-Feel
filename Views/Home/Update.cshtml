@{
    ViewData["Title"] = "Update - FinanceHub";
}

<div class="container mt-5 pt-5">
    <h1>Update Financial Record</h1>
    <p>This page simulates updating a financial record.</p>

    <form class="mt-4">
        <div class="mb-3">
            <label for="recordId" class="form-label">Record ID</label>
            <input type="text" class="form-control" id="recordId" placeholder="Enter ID to update">
        </div>
        <div class="mb-3">
            <label for="newAmount" class="form-label">New Amount</label>
            <input type="text" class="form-control" id="newAmount" placeholder="Enter new amount">
        </div>
        <button type="submit" class="btn btn-dark">Simulate Update</button>
    </form>
</div>
