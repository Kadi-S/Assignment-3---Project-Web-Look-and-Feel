@{
    ViewData["Title"] = "Read - FinanceHub";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <!-- Bootstrap Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">FinanceHub</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Home")">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("About", "Home")">About Us</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="container mt-5 pt-5">
        <h1>View Financial Records</h1>
        <p>This page displays sample financial records for demonstration purposes.</p>

        <table class="table table-striped mt-4">
            <thead class="table-dark">
                <tr>
                    <th>Record ID</th>
                    <th>Type</th>
                    <th>Category</th>
                    <th>Amount</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>001</td>
                    <td>Income</td>
                    <td>Salary</td>
                    <td>$3,500</td>
                    <td>2025-04-01</td>
                </tr>
                <tr>
                    <td>002</td>
                    <td>Expense</td>
                    <td>Rent</td>
                    <td>$1,200</td>
                    <td>2025-04-03</td>
                </tr>
                <tr>
                    <td>003</td>
                    <td>Expense</td>
                    <td>Groceries</td>
                    <td>$250</td>
                    <td>2025-04-05</td>
                </tr>
            </tbody>
        </table>
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-white text-center p-3 mt-5">
        <p>&copy; 2025 FinanceHub Team</p>
    </footer>

    <!-- Bootstrap JavaScript (optional) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
