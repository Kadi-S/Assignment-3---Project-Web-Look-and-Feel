@model List<FinanceHub.Models.Transaction>
@{
    ViewData["Title"] = "Read - FinanceHub";
}

<div class="container mt-5 pt-5">
    <h1>View Financial Records</h1>
    <p>This page displays sample financial records for demonstration purposes.</p>

    <table class="table table-striped mt-4">
        <thead class="table-dark">
            <tr>
                <th>Transaction ID</th>
                <th>User ID</th>
                <th>Type</th>
                <th>Category</th>
                <th>Amount</th>
                <th>Date</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var t in Model)
            {
                <tr>
                    <td>@t.TransactionID</td>
                    <td>@t.UserID</td>
                    <td>@t.Type</td>
                    <td>@t.Category</td>
                    <td>@t.Amount.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("en-US"))</td>
                    <td>@t.Date.ToShortDateString()</td>
                    <td>@t.Description</td>
                    <td>
                        <a href="@Url.Action("Update", "Home", new { id = t.TransactionID })" class="btn btn-sm me-2">Edit</a>
                        <a href="@Url.Action("Delete", "Home", new { id = t.TransactionID })" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>


    <a href="@Url.Action("CrudOperations", "Home")" class="btn btn-secondary mt-3">Back to CRUD Menu</a>
</div>
