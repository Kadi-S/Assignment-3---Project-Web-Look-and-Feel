@{
    ViewData["Title"] = "Read - FinanceHub";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <!-- Main Content -->
    <main class="container mt-5 pt-5">
        <h1>View Financial Records</h1>
        <p>This page displays sample financial records for demonstration purposes.</p>

        <table class="table table-striped mt-4">
            <thead class="table-dark">
                <tr>
                    <th>Record ID</th>
                    <th>Type</th>
                    <th>Category</th>
                    <th>Amount</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>001</td>
                    <td>Income</td>
                    <td>Salary</td>
                    <td>$3,500</td>
                    <td>2025-04-01</td>
                </tr>
                <tr>
                    <td>002</td>
                    <td>Expense</td>
                    <td>Rent</td>
                    <td>$1,200</td>
                    <td>2025-04-03</td>
                </tr>
                <tr>
                    <td>003</td>
                    <td>Expense</td>
                    <td>Groceries</td>
                    <td>$250</td>
                    <td>2025-04-05</td>
                </tr>
            </tbody>
        </table>
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-white text-center p-3 mt-5">
        <p>&copy; 2025 FinanceHub Team</p>
    </footer>

    <!-- Bootstrap JavaScript (optional) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
