@{
    ViewData["Title"] = "Home";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FinanceHub</title>
    <link rel="stylesheet" href="style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <!-- Bootstrap Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">FinanceHub</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Home")">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Charts", "Home")">Data Visualization</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("About", "Home")">About Us</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="container mt-5 pt-5">
        <h1>Welcome to FinanceHub</h1>
        <p>FinanceHub helps users visualize personal finance data using simple, interactive charts.</p>
        <ul>
            <li>Track expenses and income</li>
            <li>Understand financial trends</li>
            <li>Visualize savings goals</li>
        </ul>

        <!-- Optional: CRUD Buttons -->
        <div class="mt-4">
            <a href="@Url.Action("Create", "Home")" class="btn m-2" style="background-color: #343a40; color: white;">Create</a>
            <a href="@Url.Action("Read", "Home")" class="btn m-2" style="background-color: #343a40; color: white;">Read</a>
            <a href="@Url.Action("Update", "Home")" class="btn m-2" style="background-color: #343a40; color: white;">Update</a>
            <a href="@Url.Action("Delete", "Home")" class="btn m-2" style="background-color: #343a40; color: white;">Delete</a>
        </div>

        <!-- Bootstrap JavaScript (optional but recommended for navbar toggle) -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
