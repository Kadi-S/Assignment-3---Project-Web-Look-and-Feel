@{
    ViewData["Title"] = "Home";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FinanceHub</title>
    <link rel="stylesheet" href="style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <!-- Bootstrap Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">FinanceHub</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Home")">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("About", "Home")">About Us</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="mt-5 pt-5">

        <!-- About / Introduction -->
        <section class="py-5 bg-white">
            <div class="container text-center">
                <h2>Welcome to FinanceHub</h2>
                <p class="lead">
                    FinanceHub is your personal finance dashboard:
                    track income & expenses, visualize trends, and set savings goals—all in one place.
                </p>
                <a href="@Url.Action("Create","Home")" class="btn btn-primary btn-lg">Get Started</a>
            </div>
        </section>
        <!-- Key Features -->
        <section class="py-5">
            <div class="container">
                <h3 class="text-center mb-4">Key Features</h3>
                <div class="row gx-4 gy-4">
                    <div class="col-md-4">
                        <div class="card h-100 text-center">
                            <div class="card-body">
                                <i class="bi bi-journal-plus" style="font-size:2rem;"></i>
                                <h5 class="card-title mt-3">Add Transactions</h5>
                                <p class="card-text">Quickly record income or expenses with categories and notes.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card h-100 text-center">
                            <div class="card-body">
                                <i class="bi bi-graph-up" style="font-size:2rem;"></i>
                                <h5 class="card-title mt-3">Interactive Charts</h5>
                                <p class="card-text">Visualize your spending patterns over time with line & bar charts.</p>
                                <a class="nav-link" href="@Url.Action("Charts", "Home")">View</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card h-100 text-center">
                            <div class="card-body">
                                <i class="bi bi-gear-fill" style="font-size:2rem;"></i>
                                <h5 class="card-title mt-3">CRUD Operations</h5>
                                <p class="card-text">Full Create, Read, Update & Delete support for all your data.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- In‑page Navigation -->
        <section class="py-4 bg-light">
            <div class="container text-center">
                <nav>
                    <a class="mx-3" href="@Url.Action("Index","Home")">Home</a> |
                    <a class="mx-3" href="@Url.Action("Charts","Home")">Data Visualization</a> |
                    <a class="mx-3" href="@Url.Action("Dashboard","Home")">Dashboard</a> |
                    <a class="mx-3" href="@Url.Action("About","Home")">About Us</a>
                </nav>
            </div>
        </section>

    </main>
</body>
</html>
