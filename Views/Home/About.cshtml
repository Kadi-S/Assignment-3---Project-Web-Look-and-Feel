@{
    ViewData["Title"] = "About Us - FinanceHub";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <!-- Bootstrap Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">FinanceHub</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Home")">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Charts", "Home")">Data Visualization</a></li>
                    <li class="nav-item"><a class="nav-link active" href="@Url.Action("About", "Home")">About Us</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="container py-4">
        <h1 class="mb-4">About Us</h1>
        <p>Meet the team behind FinanceHub!</p>

        <!-- Team Members Section -->
        <div class="row">
            <div class="col-md-3 text-center mb-4">
                <h4>Kadiatou Sogodogo</h4>
                <p><strong>Role:</strong> Project Manager</p>
                <p><strong>Contributions:</strong> Led the team and managed project timeline.</p>
            </div>
            <div class="col-md-3 text-center mb-4">
                <h4>Navya Maddineni</h4>
                <p><strong>Role:</strong> Data Scientist</p>
                <p><strong>Contributions:</strong> Developed financial models and analysis for visualizations.</p>
            </div>
            <div class="col-md-3 text-center mb-4">
                <h4>Sai Naga Soujanya Gullapalli</h4>
                <p><strong>Role:</strong> Full Stack Developer</p>
                <p><strong>Contributions:</strong> Implemented website architecture and the CRUD system.</p>
            </div>
            <div class="col-md-3 text-center mb-4">
                <h4>Sreedurga Koppula</h4>
                <p><strong>Role:</strong> UX/UI Designer</p>
                <p><strong>Contributions:</strong> Designed the user interface for a seamless experience.</p>
            </div>
        </div>

        <!-- Logical Data Model Image Section -->
        <div class="mt-5">
            <h3>Logical Data Model</h3>
            <img src="~/images/data-model.png" alt="Logical Data Model" class="img-fluid">
            <p>This diagram shows the relationships between entities in our financial data model. It includes one-to-many relationships such as:</p>
            <ul>
                <li>Users to Transactions</li>
                <li>Transactions to Categories</li>
            </ul>
        </div>

        <!-- GitHub Repository Link -->
        <div class="mt-5">
            <h3>GitHub Repository</h3>
            <p>Visit our GitHub repository for the full project code:</p>
            <a href="https://github.com/your-repository" class="btn btn-primary" target="_blank">View on GitHub</a>
        </div>

    </main>

    <!-- Footer -->
    <footer class="bg-dark text-white text-center p-3">
        <p>&copy; 2025 FinanceHub Team</p>
    </footer>

    <!-- Bootstrap JavaScript (optional) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
